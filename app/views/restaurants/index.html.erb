<h1>Amazing restaurants around you:</h1>

<div class="row">
  <% @restaurants.each do |restaurant| %>
  <div class="col-4">
    <div class="card p-3 my-2">
      <img src="https://source.unsplash.com/random/?restaurant" width="100%" height="200px" style="object-fit:cover;" alt="">
      <h2><%= restaurant.name %></h2>
      <p><em><%= restaurant.category %></em></p>
      <%= link_to "See more", restaurant_path(restaurant), class: "btn btn-dark" %>
    </div>
  </div>
  <% end %>
</div>
<hr>
